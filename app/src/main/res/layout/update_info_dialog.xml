<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:background="@drawable/card_ui">


    <TextView
        android:id="@+id/title_label"
        android:background="@drawable/back_btn_bg2"
        android:textAllCaps="true"
        android:layout_width="0dp"
       android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="UPDATE INFO"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updated_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#cdcdcd"
        android:drawableEnd="@drawable/mobile_icon"
        android:drawableTint="#999999"
        android:ems="10"
        android:maxLength="10"
        android:fontFamily="@font/nunito_semibold"
        android:hint="Mobile No..."
        android:inputType="number"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:paddingRight="6dp"
        android:paddingBottom="16dp"
        android:textColor="#000"
        android:textColorHint="#999999"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/update_info_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_label" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/updated_et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#cdcdcd"
        android:drawableEnd="@drawable/lock"
        android:drawableTint="#999999"
        android:ems="10"
        android:fontFamily="@font/nunito_semibold"
        android:hint="New Password.."
        android:inputType="textPassword"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:paddingRight="6dp"
        android:paddingBottom="16dp"
        android:textColor="#000"
        android:textColorHint="#999999"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/update_info_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_label" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/et_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#cdcdcd"
        android:drawableTint="#999999"
        android:ems="10"
        android:fontFamily="@font/nunito_semibold"
        android:hint="Enter OTP"
        android:inputType="number"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:paddingRight="6dp"
        android:paddingBottom="16dp"
        android:textColor="#000"
        android:textColorHint="#999999"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/update_info_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_label" />



    <Button
        android:id="@+id/update_info_btn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/dialog_btn_bg3"
        android:fontFamily="@font/nunito_bold"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       />


    <Button
        android:id="@+id/verify_otp_btn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/dialog_btn_bg3"
        android:fontFamily="@font/nunito_bold"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="invisible"
        android:text="Verify"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>