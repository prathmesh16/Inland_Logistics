<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/sky</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/sky</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="DashboardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/sky</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <!--        for transaparent status bar-->
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

    </style>




    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_enter_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_exit_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_enter_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_exit_right</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DateDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/purple</item>
    </style>

    <style name="navigationTheme">
        <item name="colorPrimary">#272727</item>
        <item name="colorControlHighlight">#E3EEF3</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="spinnerTheme">
        <item name="android:textColor">@color/heading</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">16dp</item>
    </style>


</resources>
